extends layout.pug

block content
        a(href='/shows/add') Add a Show
        table
            thead
                tr
                    th
                    th Name
                    th Overall Rating
                    th Watch Status
                    th Genre
            tbody
                each show in shows
                    tr
                        td
                            img(src=`${show.imageSrc}`, alt="show pic")
                        td= show.name
                        td= show.overallRating
                        td= show.watchStatus
                        td= show.genre
                        td
                            a(href=`/shows/${show.id}`) Show Page
