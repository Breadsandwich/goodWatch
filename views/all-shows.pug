extends layout.pug

block content
        link(rel='stylesheet' href='/stylesheets/all-shows.css')
        a(href='/shows/add') Add a Show
        table#table_head 
            tbody#table_body 
                each show in shows
                    tr
                        td
                            img(#show_pic src=`${show.imageSrc}`, alt="show pic")
                        td= show.name
                        td= show.overallRating
                        td= show.watchStatus
                        td= show.genre
                        td
                            a(href=`/shows/${show.id}`) Show Page
