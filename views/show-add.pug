extends layout.pug 

include utils.pug 

block content 
    +validationErrorSummary(errors)
    form(action="/shows/add", method="post")
        input(type="hidden", name="_csrf", value=csrfToken)
        +field('Name', 'name')
        +field('Description', 'description', null , 'textarea')
        +field('Overall Rating', 'overallRating')
        label(for="watchStatus") Watch Status: 
        select(name="watchStatus")
            each val in ['Has Watched', 'Wants to Watch', 'Currently Watching'] 
                option(value=val) #{val}
        +field('Genre', 'genre')
        button Add Show 
        a(href='/') Cancel 