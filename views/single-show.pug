extends layout.pug

include utils.pug

block content
    table
            thead
                tr
                    th Name
                    th Description
                    th Overall Rating
                    th Watch Status
                    th Genre
            tbody
                +showTable(show)
                a(href='/shows/all') Back to Shows
                a(href=`/shows/${show.id}/reviews`) write a review
    div
        form(action="post")
            input(type="hidden", name="_csrf", value=csrfToken)
            label(for="review") reviews
            textarea(name="review", cols="30", rows="4")
            label(for="rating") Rating:
                select(name="rating")
                    each rating in [1, 2, 3, 4, 5]
                        option(value=rating) #{rating}
            button post review
    div
        
