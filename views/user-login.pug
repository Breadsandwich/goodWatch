extends layout

include utils.pug

block content
    link(rel="stylesheet", href="/stylesheets/login.css")
    #form-container 
        +validationErrorSummary(errors)
        form(id='loginForm' action="/users/login", method="post")
            input(type="hidden", name="_csrf", value=csrfToken)
            +field('Email: ', 'email')
            +field('Password: ', 'password')
            button Login
            a(href='/') Cancel 