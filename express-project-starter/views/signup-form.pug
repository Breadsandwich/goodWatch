extends layout

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action="/users/signup", method="post")
        input(type="hidden", name="_csrf", value=csrfToken)
        +field('Username: ', 'username')
        +field('Email: ', 'email')
        +field('Password: ', 'password')
        +field('Confirm Password: ', 'confirmPassword')
        button submit 
